#include <stdio.h>

int main()
 {
    printf("Rajveer\nMEB2-2330082\n");
    int num, sum = 0, digit;

    printf("Enter an integer: ");
    scanf("%d", &num);

    while (num != 0) {
        digit = num % 10; 
        sum += digit; 
        num /= 10; 
    }

    printf("Sum of digits: %d\n", sum);
printf("Written by Rajveer\nMEB2-2330082\n");
    return 0;
}
