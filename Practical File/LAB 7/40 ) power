#include <stdio.h>

double power(double a, int b) {
    double result = 1.0;
    
     if (b < 0) {
        a = 1 / a;
        b = -b; }
    
     for (int i = 0; i < b; i++) {
        result *= a;
    }
    
    return result;
}

int main() {
    double a;
    int b;
    
    printf("Enter the base: ");
    scanf("%lf", &a);
    
    printf("Enter the exponent: ");
    scanf("%d", &b);
    
    double result = power(a, b);
    printf("%.2lf raised to the power of %d is: %.2lf\n", a,b, result);
    printf("\nWritten by Rajveer Singh\nMEB2-2330082\n");

    return 0;
}
