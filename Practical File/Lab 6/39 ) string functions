#include<stdio.h>
#include<string.h>
int main()
{
    char arr1[50];
    char copy[50];
    char arr2[50];
   printf("Enter a word(for example:Happy) : ");
    gets(arr1);
   
   int x= strlen(arr1);
   printf("Number of letters in string are : %d\n",x);
   strcpy(copy,arr1);
   printf("Copied array is : %s\n",copy);
   printf("Enter another word : ");
   gets(arr2);
  strcat(arr1, arr2);
   printf("After concatintion : %s ",arr1);
   printf("\nWritten by Rajveer Singh\nMEB2-2330082\n");

    return 0;
}
